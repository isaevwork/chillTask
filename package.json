{
  "name": "chilltask-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "dev:frontend": "turbo dev --filter=@chilltask/frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:setup": "docker-compose up -d postgres && sleep 5 && cd apps/backend && npm run db:push",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && sleep 5 && cd apps/backend && npm run db:push"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.8.3"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaevwork/chilltask"
  },
  "keywords": [
    "monorepo",
    "chilltask",
    "react",
    "nestjs",
    "time-tracking"
  ],
  "author": "",
  "license": "ISC"
}
